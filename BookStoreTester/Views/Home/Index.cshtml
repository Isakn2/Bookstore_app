@{
    ViewData["Title"] = "Book Store Tester";
}

<div class="container">
    <div class="controls row g-3 mb-4">
        <div class="col-md-3">
            <label for="locale" class="form-label">Language/Region</label>
            <select id="locale" class="form-select" aria-label="Select language">
                <option value="en">English (USA)</option>
                <option value="de">German (Germany)</option>
                <option value="fr">French (France)</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="seed" class="form-label">Seed</label>
            <div class="input-group">
                <input type="number" id="seed" class="form-control" value="0" aria-label="Random seed value">
                <button id="randomSeed" class="btn btn-outline-secondary" type="button" aria-label="Generate random seed">
                    <i class="bi bi-shuffle"></i> Random
                </button>
            </div>
        </div>

        <div class="col-md-3">
            <label for="avgLikes" class="form-label">Average Likes: <span id="likesValue">0</span></label>
            <input type="range" id="avgLikes" min="0" max="10" step="0.1" value="0" class="form-range" aria-label="Average likes slider">
        </div>

        <div class="col-md-3">
            <label for="avgReviews" class="form-label">Average Reviews</label>
            <input type="number" id="avgReviews" min="0" step="0.1" value="0" class="form-control" aria-label="Average reviews">
        </div>

        <div class="col-12 d-flex gap-2">
            <button id="exportCsv" class="btn btn-primary" aria-label="Export to CSV">
                <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
            </button>
            <button id="toggleView" class="btn btn-secondary" aria-label="Toggle between table and gallery view">
                <i class="bi bi-grid"></i> Gallery View
            </button>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="text-center my-4 d-none">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading books...</p>
    </div>

    <!-- Book Display -->
    <div id="bookContainer">
        <!-- Table View -->
        <table class="table table-striped table-hover table-bordered" id="bookTable">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Author(s)</th>
                    <th>Publisher</th>
                    <th>Likes</th>
                    <th>Reviews</th>
                </tr>
            </thead>
            <tbody id="bookTableBody"></tbody>
        </table>
        
        <!-- Gallery View -->
        <div id="bookGallery" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 d-none"></div>
        
        <!-- No Results Message -->
        <div id="noResults" class="alert alert-info d-none">No books found with these parameters.</div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.20/lodash.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/intersection-observer@0.12.0/intersection-observer.js"></script>
}